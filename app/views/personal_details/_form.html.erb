  </div>
  <div class="field">
    <%= f.label :tin %><br />
    <%= f.text_field :tin %>
  </div>
  <div class="field">
    <%= f.label :national_reg_cards_no %><br />
    <%= f.text_field :national_reg_cards_no %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn" %>
