    <label>Present Job / Assignment</label><br />
    <%= f.text_field :assignment %>
  </div>
  <div class="field">
    <%= f.label :duty_address %><br />
    <%= f.text_field :duty_address %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </div>
  <div class="field">
    <%= f.label :home_address %><br />
    <%= f.text_field :home_address %>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate, start_year: Date.today.strftime("%Y").to_i - 65, end_year: Date.today.strftime("%Y").to_i %>
  </div>
  <div class="field">
    <%= f.label :place_of_birth %><br />
    <%= f.text_field :place_of_birth %>
