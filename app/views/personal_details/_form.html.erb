      <ul>
      <% @personal_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :last_name, placeholder: "Last Name" %>
    <%= f.text_field :first_name, placeholder: "First Name" %>
    <%= f.text_field :middle_name, placeholder: "Middle Name" %>
  </div>
  <div class="field">
    <%= f.label :rank %><br />
    <%= f.text_field :rank, placeholder: "Rank" %>
