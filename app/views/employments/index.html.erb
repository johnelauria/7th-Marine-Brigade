<h1>Listing employments</h1>

<table>
  <tr>
    <th>Personal detail</th>
    <th>Employment date</th>
    <th>Retirement</th>
    <th>Type of employment</th>
    <th>Name</th>
    <th>Address</th>
    <th>Nature of leaving</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employments.each do |employment| %>
  <tr>
    <td><%= employment.personal_detail_id %></td>
    <td><%= employment.employment_date %></td>
    <td><%= employment.retirement %></td>
    <td><%= employment.type_of_employment %></td>
    <td><%= employment.name %></td>
    <td><%= employment.address %></td>
    <td><%= employment.nature_of_leaving %></td>
    <td><%= link_to 'Show', employment %></td>
    <td><%= link_to 'Edit', edit_employment_path(employment) %></td>
    <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

