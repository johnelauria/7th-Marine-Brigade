<%= form_for(@educational_background) do |f| %>
  <% if @educational_background.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@educational_background.errors.count, "error") %> prohibited this educational_background from being saved:</h2>

      <ul>
      <% @educational_background.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :personal_detail_id, value: @personal_detail.id %>

  <div class="field">
    <%= f.label :level %>
    <%= f.select :level, "<option>Elementary</option><option>High School</option><option>College</option><option>Post Graduate</option><option>Others</option>".html_safe, prompt: "Please select" %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_area :location, rows: 3 %>
  </div>
  <div class="field">
    <%= f.label :Date_of_attendance %>
    <small>From</small>
    <%= f.date_select :date_of_attendance1, start_year: Date.today.strftime("%Y").to_i - 65, end_year: Date.today.strftime("%Y").to_i %><br>
    <small>Until</small>
    <%= f.date_select :date_of_attendance2, start_year: Date.today.strftime("%Y").to_i - 65, end_year: Date.today.strftime("%Y").to_i %>
  </div>
  <div class="field">
    <%= f.label :year_graduate %>
    <%= f.text_field :year_graduate %>
  </div>
  <div class="field">
    <%= f.label :standing %>
    <%= f.text_field :standing %>
  </div>
  <div class="field">
    <label>Degree/Course Taken</label><br />
    <%= f.text_field :degree, placeholder: "Leave Blank if not applicable" %>
  </div>
  <div class="field">
    <label>Completed?</label>
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>
